{
    "name": "laravel-issue-tracker/core",
    "type": "library",
    "description": "This is the core library for the Laravel Issue Tracker components. Contains the main interfaces, abstract classes and any other common classes.",
    "keywords": [
        "laravel-issue-tracker",
        "core",
        "LaravelIssueTracker"
    ],
    "homepage": "https://bitbucket.org/laravelissuetracker/laravel-issue-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Istvan Szana",
            "email": "szana8@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "barryvdh/laravel-ide-helper": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "LaravelIssueTracker\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelIssueTracker\\Core\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
